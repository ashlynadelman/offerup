<%= search_form_for @q, :class => collapse_search_form, :id => "items_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :title_cont, "Title contains" %>
    <%= f.text_field :title_cont, :class => "form-control", :placeholder => "Title contains" %>
  </div>

  <div class="form-group">
    <%= f.label :posted_date, "Posted date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='posted_dategteqPicker' data-target-input="nearest">
          <%= f.text_field :posted_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Posted date greater than or equal to", :data => {:target => '#posted_dategteqPicker'} %>
          <div class="input-group-append" data-target='#posted_dategteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='posted_datelteqPicker' data-target-input="nearest">
          <%= f.text_field :posted_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Posted date less than or equal to", :data => {:target => '#posted_datelteqPicker'} %>
          <div class="input-group-append" data-target='#posted_datelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#posted_dategteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#posted_datelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#posted_dategteqPicker').on("dp.change", function (e) {
              $('#posted_datelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#posted_datelteqPicker').on("dp.change", function (e) {
              $('#posted_dategteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :created_at, "Price Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='pricegteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :price_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Price Created at greater than or equal to", :data => {:target => '#pricegteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#pricegteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='pricelteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :price_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Price Created at less than or equal to", :data => {:target => '#pricelteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#pricelteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#pricegteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#pricelteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#pricegteqcreated_atPicker').on("dp.change", function (e) {
              $('#pricelteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#pricelteqcreated_atPicker').on("dp.change", function (e) {
              $('#pricegteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :item_id, "Category Item" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :category_item_id_gteq, :class => "form-control", :placeholder => "Category Item greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :category_item_id_lteq, :class => "form-control", :placeholder => "Category Item less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :item_id, "User Item" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :user_item_id_gteq, :class => "form-control", :placeholder => "User Item greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :user_item_id_lteq, :class => "form-control", :placeholder => "User Item less than or equal to" %>
      </div>
    </div>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/items" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

