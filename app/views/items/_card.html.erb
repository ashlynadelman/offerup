<div class="card mb-3">
  <h2 class="card-header h4">
    Item #<%= item.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Category</dt>
      <!-- Display category_id start -->
      <dd>
        <% if @item.category.present? %>
          <%= link_to item.category, item.category %>
        <% end %>
      </dd>
      <!-- Display category_id end -->

      <dt>Price</dt>
      <!-- Display price_id start -->
      <dd>
        <% if @item.price.present? %>
          <%= link_to item.price, item.price %>
        <% end %>
      </dd>
      <!-- Display price_id end -->

      <dt>Description</dt>
      <!-- Display description start -->
      <dd><%= item.description %></dd>
      <!-- Display description end -->

      <dt>User</dt>
      <!-- Display user_id start -->
      <dd>
        <% if @item.user.present? %>
          <%= link_to item.user, item.user %>
        <% end %>
      </dd>
      <!-- Display user_id end -->

      <dt>Location</dt>
      <!-- Display location start -->
      <dd>
        <div>
          <%= render partial: "items/one_photo_map" %>
        </div>
      </dd>
      <!-- Display location end -->

      <dt>Picture</dt>
      <!-- Display picture start -->
      <dd>
        <%= cl_image_tag @item.picture, class: "img-fluid" %>
      </dd>
      <!-- Display picture end -->

      <dt>Posted date</dt>
      <!-- Display posted_date start -->
      <dd><%= item.posted_date %></dd>
      <!-- Display posted_date end -->

      <dt>Title</dt>
      <!-- Display title start -->
      <dd><%= item.title %></dd>
      <!-- Display title end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back item, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link item start -->
      <div class="col">
        <%= link_to edit_item_url(item), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link item end -->

      <!-- Delete link item start -->
      <div class="col">
        <%= link_to item, method: :delete, data: { confirm: "Do you really want to delete this item?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link item end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(item.updated_at) %> ago
  </div>
</div>
