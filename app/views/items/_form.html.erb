    <!-- Input for price_id start -->
    <%= f.number_field :price_id, class: price_class, placeholder: "Enter price" %>
    <!-- Input for price_id end -->
    <% if price_was_invalid %>
      <% item.errors.full_messages_for(:price).each do |message| %>
